{
  "manifest_version": 3,
  "name": "Copy Style",
  "version": "1.0",
  "description": "Chrome extension to analyze images with Gemini AI and generate images using RUNPOD API",
  "permissions": [
    "contextMenus",
    "storage",
    "clipboardWrite",
    "notifications",
    "offscreen",
    "downloads"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/",
    "https://api.runpod.ai/",
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}